<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.growupzyg.smalltarget.search.SearchActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height">
        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/nav_bar_height"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_back"
            android:scaleType="centerInside"
            />
        <TextView
            android:id="@+id/text_search"
            android:layout_width="@dimen/nav_bar_height"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="@string/search"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/font_main"
            android:textSize="@dimen/font_large"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/text_search"
            android:layout_toRightOf="@id/image_back"
            android:drawableLeft="@drawable/ic_action_search"
            android:hint="@string/search"
            android:background="@drawable/bg_edit_search"
            />
    </RelativeLayout>
    <include layout="@layout/include_horizontal_line"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextColor="@color/font_main"
        app:tabMode="fixed"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
